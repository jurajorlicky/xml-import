name: Import XML Feed to Supabase
permissions:
  contents: write
  actions: write

on:
  workflow_dispatch:  # MoÅ¾nosÅ¥ manuÃ¡lneho spustenia
  schedule:
    - cron: "0 0,6,12,18 * * *"  # AutomatickÃ© spustenie kaÅ¾dÃ½ch 6 hodÃ­n

jobs:
  import_feed:
    runs-on: ubuntu-latest
    steps:
      - name: ðŸ›’ Checkout repo
        uses: actions/checkout@v4

      - name: âš™ï¸ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18

      - name: ðŸ“¦ Install dependencies
        run: |
          npm install dotenv
          npm install

      - name: ðŸš€ Run product import script in a loop for 6 hours
        env:
          SUPABASE_URL: ${{ secrets.SUPABASE_URL }}
          SUPABASE_KEY: ${{ secrets.SUPABASE_KEY }}
        run: |
          echo "ðŸš€ Starting continuous import loop..."
          end=$((SECONDS+21600))  # 21600 sekÃºnd = 6 hodÃ­n
          while [ $SECONDS -lt $end ]; do
            echo "ðŸ”„ Running product import at $(date)"
            node importXMLFeed.js 2>&1 | tee -a import_log.txt
            sleep 20  
          done
          echo "âœ… Completed 6-hour import cycle."

      - name: ðŸš€ Commit & Push updated XML feed
        run: |
          echo "ðŸ”„ Checking for XML changes..."
          git config --global user.name "github-actions"
          git config --global user.email "actions@github.com"
          git add feed.xml
          git diff --cached --exit-code || (git commit -m "ðŸ”„ Auto-update XML feed" && git push origin main)
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: ðŸ›‘ Allow Manual Workflow Cancellation
        if: always()
        run: |
          echo "ðŸ”´ Workflow can be manually canceled if needed."
      
      - name: ðŸ“œ Upload log on failure
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: import-log
          path: import_log.txt
